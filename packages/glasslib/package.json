{
  "name": "@glass-lang/glasslib",
  "version": "0.1.0",
  "description": "Promptfile language tools",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "glasslib": "./dist/cli.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "test": "mocha --exit",
    "test:watch": "npm-watch test",
    "dev": "ts-node src/index.ts",
    "build": "tsup src/index.ts src/cli.ts",
    "lint": "eslint src --ext ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/glass-platform/promptfile.git"
  },
  "homepage": "https://github.com/glass-platform/promptfile",
  "bugs": "https://github.com/glass-platform/promptfile/issues",
  "authors": [
    "John Rothfels <john@platform.glass>",
    "Elliott Burris <elliott@platform.glass>"
  ],
  "files": [
    "dist",
    "LICENSE"
  ],
  "license": "MIT",
  "devDependencies": {
    "@glass-lang/util": "*",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.3",
    "@types/yargs": "^17.0.24",
    "chai": "^4.3.7",
    "eslint-config-custom": "*",
    "mocha": "^10.2.0",
    "npm-watch": "^0.11.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  },
  "tsup": {
    "sourcemap": true,
    "format": [
      "cjs"
    ],
    "clean": true,
    "dts": true
  },
  "watch": {
    "test": {
      "patterns": [
        "./src"
      ],
      "inherit": true,
      "extensions": "ts"
    }
  },
  "dependencies": {
    "yargs": "^17.7.2"
  }
}
