{
  "name": "@glass-lang/glasslib",
  "version": "0.0.8",
  "description": "Glass language tools",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "test": "mocha --exit --enable-source-maps ./dist/test.js",
    "test:watch": "mocha --watch --enable-source-maps ./dist/test.js",
    "build": "npm run build:types && webpack --mode production",
    "watch": "webpack --watch --mode development",
    "build:types": "tsc --emitDeclarationOnly",
    "build:tsup": "tsup src/index.ts",
    "dev": "npm run build -- --watch",
    "lint": "eslint src --ext ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/foundation-ui/glass.git"
  },
  "homepage": "https://github.com/foundation-ui/glass",
  "bugs": "https://github.com/foundation-ui/glass/issues",
  "authors": [
    "John Rothfels <john@foundation-ui.com>",
    "Elliott Burris <elliott@foundation-ui.com>"
  ],
  "files": [
    "dist",
    "LICENSE"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/plugin-transform-modules-commonjs": "^7.21.5",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-typescript": "^7.21.5",
    "@glass-lang/util": "*",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.3",
    "babel-loader": "^9.1.2",
    "chai": "^4.3.7",
    "eslint-config-custom": "*",
    "mdast-util-from-markdown": "^1.3.0",
    "mdast-util-frontmatter": "^1.0.1",
    "mdast-util-mdx": "^2.0.1",
    "micromark-extension-frontmatter": "^1.1.0",
    "micromark-extension-mdxjs": "^1.0.1",
    "mocha": "^10.2.0",
    "node-fetch": "^2.6.11",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "webpack": "^5.83.1",
    "webpack-cli": "^5.1.1"
  },
  "tsup": {
    "sourcemap": true,
    "format": [
      "cjs"
    ],
    "clean": true,
    "dts": true
  }
}
