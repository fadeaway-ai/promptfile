{
  "name": "@glass-lang/glasslib",
  "version": "0.0.32",
  "description": "Promptfile language tools",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "test:build": "tsup src/test.ts",
    "test": "npm run test:build && mocha --exit --enable-source-maps ./dist/test.js",
    "test:watch": "npm run test:build && mocha --watch --enable-source-maps ./dist/test.js",
    "dev": "ts-node src/index.ts",
    "build": "npm run clean && npm run build:types && npm run build:tsup",
    "build:types": "tsc --emitDeclarationOnly",
    "build:tsup": "tsup src/index.ts",
    "lint": "eslint src --ext ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/glass-platform/promptfile.git"
  },
  "homepage": "https://github.com/glass-platform/promptfile",
  "bugs": "https://github.com/glass-platform/promptfile/issues",
  "authors": [
    "John Rothfels <john@platform.glass>",
    "Elliott Burris <elliott@platform.glass>"
  ],
  "files": [
    "dist",
    "LICENSE"
  ],
  "license": "MIT",
  "devDependencies": {
    "@glass-lang/util": "*",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.3",
    "chai": "^4.3.7",
    "eslint-config-custom": "*",
    "mocha": "^10.2.0",
    "node-fetch": "^2.6.11",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "ulid": "^2.3.0"
  },
  "tsup": {
    "sourcemap": true,
    "format": [
      "cjs"
    ],
    "clean": true,
    "dts": true
  }
}
