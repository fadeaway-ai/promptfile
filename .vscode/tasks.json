// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": {
        "base": "$tsc-watch",
        "fileLocation": ["relative", "${workspaceFolder}/apps/vscode-prompt"]
      },
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/apps/vscode-prompt"
      },
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "turbo build",
      "type": "process",
      "command": "npx",
      "args": ["turbo", "build"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
