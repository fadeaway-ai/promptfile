// Place your settings in this file to overwrite default and user settings.
{
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": false,
  "editor.codeActionsOnSave": {
    "source.addMissingImports": true,
    "source.organizeImports": true,
    "source.fixAll": true
  },
  "editor.formatOnSave": true,
  "[mdx]": {
    "editor.formatOnSave": false
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "typescript.preferences.importModuleSpecifier": "relative",
  "eslint.workingDirectories": [
    { "directory": "apps/vscode-prompt", "changeProcessCWD": true },
    { "directory": "apps/glassfile.org", "changeProcessCWD": true },
    { "directory": "packages/glassc", "changeProcessCWD": true },
    { "directory": "packages/glasslib", "changeProcessCWD": true },
    { "directory": "packages/pythonlib", "changeProcessCWD": true },
    { "directory": "packages/language-server", "changeProcessCWD": true },
    { "directory": "packages/rig", "changeProcessCWD": true },
    { "directory": "packages/util", "changeProcessCWD": true }
  ],
  "search.exclude": {
    "out": true, // set this to false to include "out" folder in search results
    "dist": true
  },
  // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
  "typescript.tsc.autoDetect": "off",
  "editor.wordWrap": "on",
  "[prompt]": {
    "editor.defaultFormatter": "foundation.vscode-prompt"
  }
}
