{
  "$schema": "https://raw.githubusercontent.com/Septh/tmlanguage/master/tmlanguage.json",
  "name": "Promptfile",
  "scopeName": "source.promptfile",
  "patterns": [
    {
      "begin": "^---$",
      "beginCaptures": {
        "0": {
          "name": "string.other.begin.yaml"
        }
      },
      "end": "^---$",
      "endCaptures": {
        "0": {
          "name": "string.other.end.yaml"
        }
      },
      "contentName": "source.yaml",
      "patterns": [
        {
          "include": "source.yaml"
        }
      ]
    },
    {
      "include": "#functions-element"
    },
    {
      "include": "#function-element"
    },
    {
      "include": "#user-element"
    },
    {
      "include": "#assistant-element"
    },
    {
      "include": "#system-element"
    },
    {
      "match": ".",
      "name": "source.promptfile.void"
    }
  ],
  "repository": {
    "functions-element": {
      "begin": "^(<)(Functions)(>)$",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.tag.end.jsx"
        },
        "2": {
          "name": "source.promptfile.functions.name"
        },
        "3": {
          "name": "punctuation.definition.tag.end.jsx"
        }
      },
      "end": "^(<\\/)(Functions)(>)$",
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.tag.end.jsx"
        },
        "2": {
          "name": "source.promptfile.functions.name"
        },
        "3": {
          "name": "punctuation.definition.tag.end.jsx"
        }
      },
      "patterns": [
        {
          "include": "source.json"
        }
      ]
    },
    "system-element": {
      "begin": "^(<)(System)(.*)(>)$",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.tag.end.jsx"
        },
        "2": {
          "name": "source.promptfile.system.name"
        },
        "3": {
          "patterns": [
            {
              "include": "source.tsx#jsx-tag-attribute-name"
            },
            {
              "include": "source.tsx#jsx-tag-attribute-assignment"
            },
            {
              "include": "source.tsx#jsx-string-double-quoted"
            },
            {
              "include": "source.tsx#jsx-string-single-quoted"
            },
            {
              "include": "source.tsx#jsx-evaluated-code"
            }
          ]
        },
        "4": {
          "name": "punctuation.definition.tag.end.jsx"
        }
      },
      "patterns": [
        {
          "include": "#variable"
        },
        {
          "include": "text.html.markdown"
        }
      ],
      "end": "^(<\\/)(System)(>)$",
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.tag.end.jsx"
        },
        "2": {
          "name": "source.promptfile.system.name"
        },
        "3": {
          "name": "punctuation.definition.tag.end.jsx"
        }
      }
    },
    "assistant-element": {
      "begin": "^(<)(Assistant)(.*)(>)$",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.tag.end.jsx"
        },
        "2": {
          "name": "source.promptfile.assistant.name"
        },
        "3": {
          "patterns": [
            {
              "include": "source.tsx#jsx-tag-attribute-name"
            },
            {
              "include": "source.tsx#jsx-tag-attribute-assignment"
            },
            {
              "include": "source.tsx#jsx-string-double-quoted"
            },
            {
              "include": "source.tsx#jsx-string-single-quoted"
            },
            {
              "include": "source.tsx#jsx-evaluated-code"
            }
          ]
        },
        "4": {
          "name": "punctuation.definition.tag.end.jsx"
        }
      },
      "patterns": [
        {
          "include": "#variable"
        },
        {
          "include": "text.html.markdown"
        }
      ],
      "end": "^(<\\/)(Assistant)(>)$",
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.tag.end.jsx"
        },
        "2": {
          "name": "source.promptfile.assistant.name"
        },
        "3": {
          "name": "punctuation.definition.tag.end.jsx"
        }
      }
    },
    "function-element": {
      "begin": "^(<)(Function)(.*)(>)$",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.tag.end.jsx"
        },
        "2": {
          "name": "source.promptfile.function.name"
        },
        "3": {
          "patterns": [
            {
              "include": "source.tsx#jsx-tag-attribute-name"
            },
            {
              "include": "source.tsx#jsx-tag-attribute-assignment"
            },
            {
              "include": "source.tsx#jsx-string-double-quoted"
            },
            {
              "include": "source.tsx#jsx-string-single-quoted"
            },
            {
              "include": "source.tsx#jsx-evaluated-code"
            }
          ]
        },
        "4": {
          "name": "punctuation.definition.tag.end.jsx"
        }
      },
      "end": "^(<\\/)(Function)(>)$",
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.tag.end.jsx"
        },
        "2": {
          "name": "source.promptfile.function.name"
        },
        "3": {
          "name": "punctuation.definition.tag.end.jsx"
        }
      },
      "patterns": [
        {
          "include": "text.html.markdown"
        }
      ]
    },
    "user-element": {
      "begin": "^(<)(User)(.*)(>)$",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.tag.end.jsx"
        },
        "2": {
          "name": "source.promptfile.user.name"
        },
        "3": {
          "patterns": [
            {
              "include": "source.tsx#jsx-tag-attribute-name"
            },
            {
              "include": "source.tsx#jsx-tag-attribute-assignment"
            },
            {
              "include": "source.tsx#jsx-string-double-quoted"
            },
            {
              "include": "source.tsx#jsx-string-single-quoted"
            },
            {
              "include": "source.tsx#jsx-evaluated-code"
            }
          ]
        },
        "4": {
          "name": "punctuation.definition.tag.end.jsx"
        }
      },
      "end": "^(<\\/)(User)(>)$",
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.tag.end.jsx"
        },
        "2": {
          "name": "source.promptfile.user.name"
        },
        "3": {
          "name": "punctuation.definition.tag.end.jsx"
        }
      },
      "patterns": [
        {
          "include": "#variable"
        },
        {
          "include": "text.html.markdown"
        }
      ]
    }
  }
}
