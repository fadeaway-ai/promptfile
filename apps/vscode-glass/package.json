{
  "name": "vscode-glass",
  "version": "0.8.1",
  "displayName": "Glass",
  "description": "Language support for Glass",
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/foundation-ui/glass.git",
    "directory": "packages/vscode-glass"
  },
  "publisher": "foundation",
  "private": true,
  "engines": {
    "vscode": "^1.78.0"
  },
  "vsce": {
    "dependencies": false
  },
  "main": "./out/extension.js",
  "keywords": [
    "glass",
    "foundation",
    "gpt",
    "llm"
  ],
  "icon": "assets/glass.png",
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:glass",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "esbuild extension=./src/extension.ts language-server=../../packages/language-server/src/server.ts --bundle --platform=node --target=node16 --external:vscode --external:esbuild --outdir=out && npm run build:rig",
    "build:rig": "esbuild rig=../../packages/rig/src/rig.tsx --bundle --outdir=out",
    "compile": "tsc -p tsconfig.test.json",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^2.19.0",
    "eslint-config-custom": "*",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@glass-lang/glassc": "*",
    "@glass-lang/language-server": "*",
    "@glass-lang/rig": "*",
    "esbuild": "^0.17.18",
    "node-fetch": "^3.3.1",
    "vscode-languageclient": "^8.1.0"
  },
  "contributes": {
    "menus": {
      "view/title": [
        {
          "command": "glass.openSettings",
          "name": "Glass settings"
        },
        {
          "command": "glass.openDocs",
          "name": "Documentation"
        }
      ]
    },
    "iconThemes": [
      {
        "id": "glass-icon-theme",
        "label": "Glass Icon Theme",
        "path": "./assets/glass-icon-theme.json"
      }
    ],
    "colors": [
      {
        "id": "glass.code.background",
        "description": "Background color for <Code> blocks",
        "defaults": {
          "dark": "#4a4a4a26",
          "light": "#b8caf9"
        }
      },
      {
        "id": "glass.system.background",
        "description": "Background color for System blocks",
        "defaults": {
          "dark": "#f467c60D",
          "light": "#b8caf9"
        }
      },
      {
        "id": "glass.user.background",
        "description": "Background color for User blocks",
        "defaults": {
          "dark": "#4EC9B00D",
          "light": "#b8caf9"
        }
      },
      {
        "id": "glass.assistant.background",
        "description": "Background color for Assistant blocks",
        "defaults": {
          "dark": "#5EC5E50D",
          "light": "#b8caf9"
        }
      }
    ],
    "commands": [
      {
        "command": "glass.run",
        "title": "Glass: run current file"
      },
      {
        "command": "glass.openSettings",
        "title": "Glass: Open settings"
      },
      {
        "command": "glass.openDocs",
        "title": "Glass: Open documentation"
      },
      {
        "command": "glass.transpileCurrentFile",
        "title": "Glass: Transpile current file"
      },
      {
        "command": "glass.transpileAll",
        "title": "Glass: Transpile all"
      }
    ],
    "keybindings": [
      {
        "command": "glass.run",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus && resourceLangId == glass"
      }
    ],
    "configuration": [
      {
        "title": "Glass",
        "properties": {
          "glass.defaultChatModel": {
            "type": "string",
            "default": "gpt-3.5-turbo",
            "description": "Default model for chat prompts",
            "enum": [
              "gpt-3.5-turbo",
              "gpt-4"
            ]
          },
          "glass.defaultCompletionModel": {
            "type": "string",
            "default": "text-davinci-003",
            "description": "Default model for completion prompts",
            "enum": [
              "text-davinci-003",
              "text-curie-001",
              "text-babbage-001",
              "text-ada-001"
            ]
          },
          "glass.language": {
            "type": "string",
            "default": "typescript",
            "enum": [
              "typescript",
              "javascript",
              "python"
            ],
            "description": "Language to transpile .glass files to"
          },
          "glass.openaiKey": {
            "type": "string",
            "default": "",
            "description": "OpenAI secret API key"
          },
          "glass.outputDirectory": {
            "type": "string",
            "default": "${workspaceFolder}/src",
            "description": "Output directory for generated code"
          }
        }
      }
    ],
    "configurationDefaults": {
      "[glass]": {
        "editor.formatOnSave": true,
        "editor.quickSuggestions": {
          "other": "on",
          "comments": "on",
          "strings": "on"
        },
        "files.insertFinalNewline": false
      },
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "source.glass.content",
            "settings": {
              "foreground": "#575757",
              "fontStyle": "italic"
            }
          },
          {
            "scope": "source.glass.prompt.name",
            "settings": {
              "foreground": "#4EC9B0",
              "fontStyle": "italic"
            }
          },
          {
            "scope": "source.glass.code.name",
            "settings": {
              "foreground": "#FFB454",
              "fontStyle": "italic"
            }
          },
          {
            "scope": "source.glass.system.name",
            "settings": {
              "foreground": "#f467c6",
              "fontStyle": "italic"
            }
          },
          {
            "scope": "source.glass.for.name",
            "settings": {
              "foreground": "#E5C75E",
              "fontStyle": "italic"
            }
          },
          {
            "scope": "source.glass.assistant.name",
            "settings": {
              "foreground": "#5EC5E5",
              "fontStyle": "italic"
            }
          },
          {
            "scope": "source.glass.user.name",
            "settings": {
              "foreground": "#4EC9B0",
              "fontStyle": "italic"
            }
          },
          {
            "scope": "source.glass.punctuation",
            "settings": {
              "foreground": "#7a7a7a"
            }
          },
          {
            "scope": "source.glass.highlight",
            "settings": {
              "foreground": "#569CD6"
            }
          },
          {
            "scope": "markup.list.table-delimiter.mdx",
            "settings": {
              "foreground": "#569CD6"
            }
          },
          {
            "scope": "source.glass.comment",
            "settings": {
              "foreground": "#575757",
              "fontStyle": "italic"
            }
          },
          {
            "scope": "string.other.begin.expression.mdx.js",
            "settings": {
              "foreground": "#4dff00",
              "fontStyle": "bold"
            }
          }
        ]
      }
    },
    "grammars": [
      {
        "language": "glass",
        "scopeName": "source.glass",
        "path": "./syntaxes/glass.tmLanguage.json",
        "embeddedLanguages": {
          "source.js": "javascript",
          "source.js.jsx": "javascriptreact",
          "meta.tag.js": "jsx-tags",
          "meta.tag.without-attributes.js": "jsx-tags",
          "meta.embedded.block.frontmatter": "yaml",
          "meta.embedded.block.css": "css",
          "meta.embedded.block.ini": "ini",
          "meta.embedded.block.java": "java",
          "meta.embedded.block.lua": "lua",
          "meta.embedded.block.makefile": "makefile",
          "meta.embedded.block.perl": "perl",
          "meta.embedded.block.r": "r",
          "meta.embedded.block.ruby": "ruby",
          "meta.embedded.block.php": "php",
          "meta.embedded.block.sql": "sql",
          "meta.embedded.block.vs_net": "vs_net",
          "meta.embedded.block.html": "html",
          "meta.embedded.block.xml": "xml",
          "meta.embedded.block.xsl": "xsl",
          "meta.embedded.block.yaml": "yaml",
          "meta.embedded.block.dosbatch": "dosbatch",
          "meta.embedded.block.clojure": "clojure",
          "meta.embedded.block.coffee": "coffee",
          "meta.embedded.block.c": "c",
          "meta.embedded.block.cpp": "cpp",
          "meta.embedded.block.diff": "diff",
          "meta.embedded.block.dockerfile": "dockerfile",
          "meta.embedded.block.go": "go",
          "meta.embedded.block.groovy": "groovy",
          "meta.embedded.block.pug": "jade",
          "meta.embedded.block.javascript": "javascript",
          "meta.embedded.block.javascriptreact": "javascriptreact",
          "meta.embedded.block.json": "json",
          "meta.embedded.block.less": "less",
          "meta.embedded.block.objc": "objc",
          "meta.embedded.block.scss": "scss",
          "meta.embedded.block.perl6": "perl6",
          "meta.embedded.block.powershell": "powershell",
          "meta.embedded.block.python": "python",
          "meta.embedded.block.rust": "rust",
          "meta.embedded.block.scala": "scala",
          "meta.embedded.block.shellscript": "shellscript",
          "meta.embedded.block.typescript": "typescript",
          "meta.embedded.block.typescriptreact": "typescriptreact",
          "meta.embedded.block.csharp": "csharp",
          "meta.embedded.block.fsharp": "fsharp"
        }
      }
    ],
    "documentFormattingProvider": {
      "language": "glass",
      "scheme": "file"
    },
    "languages": [
      {
        "id": "glass",
        "aliases": [
          "Glass"
        ],
        "extensions": [
          ".glass"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "dark": "./images/dark.svg",
          "light": "./images/light.svg"
        }
      }
    ]
  }
}
